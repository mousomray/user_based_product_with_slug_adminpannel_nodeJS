<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../common/head.ejs') %>
    <style>
      body {
        background: linear-gradient(135deg, #ff9a9e, #fad0c4);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Arial", sans-serif;
      }
      .verify-container {
        max-width: 400px;
        width: 100%;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        padding: 35px;
        text-align: center;
      }
      .form-control {
        border-radius: 50px;
        padding: 12px;
        border: 1px solid #ddd;
      }
      .btn-custom {
        background: #ff758c;
        color: white;
        border-radius: 50px;
        padding: 12px;
        transition: 0.3s;
        width: 100%;
        font-weight: bold;
        letter-spacing: 1px;
      }
      .btn-custom:hover {
        background: #ff647f;
      }
      .text-muted {
        font-size: 14px;
        color: #6c757d;
      }
      .otp-container {
        position: relative;
      }
      .toggle-otp {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #888;
      }
    </style>
  </head>

  <!-- Flash Messages -->
  <% if (sucess && sucess != '') { %>
    <div
      class="alert alert-success"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= sucess %>
    </div>
    <% } else if (err && err != '') { %>
    <div
      class="alert alert-danger"
      role="alert"
      style="
        position: absolute;
        top: 50px;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        text-align: center;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        padding: 10px;
        z-index: 1000;
      "
    >
      <%= err %>
    </div>
    <% } %>

  <body>
    <div class="verify-container">
      <h2 class="text-primary">Verify Your Email</h2>
      <p class="text-muted">Enter your email and OTP sent to your inbox.</p>
      <form class="user" action="<%= generateUrl('otpverifycreate') %>" method="POST">
        <input
          type="email"
          class="form-control mb-3"
          placeholder="Enter Your Email"
          name="email"
          required
        />
        <div class="otp-container">
          <input
            type="password"
            class="form-control mb-3"
            id="otpInput"
            placeholder="Enter OTP"
            name="otp"
            required
          />
          <span class="toggle-otp" onclick="toggleOTP()">üëÅÔ∏è</span>
        </div>
        <button type="submit" class="btn btn-custom">Verify Email</button>
        <hr />
      </form>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="js/sb-admin-2.min.js"></script>

    <script>
      function toggleOTP() {
        const otpInput = document.getElementById("otpInput");
        if (otpInput.type === "password") {
          otpInput.type = "text";
        } else {
          otpInput.type = "password";
        }
      }
    </script>
  </body>
</html>
